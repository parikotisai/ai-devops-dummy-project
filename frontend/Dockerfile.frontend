# Stage 1: Build Node.js dependencies
FROM node:14 AS build-env
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Stage 2: Production frontend image
FROM nginx:alpine
WORKDIR /usr/share/nginx/html
COPY --from=build-env /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]